
# .env.example for TinyLinkApp
# This file lists all required environment variables for the project.
# Copy this file to .env and fill in the actual values.

# Backend Configuration

# PostgreSQL Database Connection URL
# Example: postgresql://user:password@host:port/database_name
DATABASE_URL=your_postgresql_database_url_here

# Port for the Node.js Express server
PORT=3000

# Base URL of the deployed backend service
# This is used to construct the full short URLs.
# Example (local): http://localhost:3000
# Example (production): https://your-backend-service.onrender.com
BASE_URL=your_backend_deployed_url_here

# Node.js environment mode (e.g., development, production)
NODE_ENV=development

# Frontend Configuration 

# Base URL for the backend API calls from the frontend
# Vite requires environment variables exposed to the browser to be prefixed with VITE_
# Example (local): http://localhost:3000/api
# Example (production): https://your-backend-service.onrender.com/api
VITE_API_URL=your_backend_api_url_here/api

# Origin URL of the deployed frontend service
# This is used by the backend for CORS configuration to allow requests from your frontend.
# Example (local): http://localhost:5173
# Example (production): https://your-frontend-service.vercel.app
VITE_CLIENT_ORIGIN=your_frontend_deployed_url_here
